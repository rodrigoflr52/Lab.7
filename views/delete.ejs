<%- include ("./partials/_header") %>
  <main role="main" class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
        <h2 class="blog-post-title">Are you sure you want to delete this post?</h2>
        <form action="/newPost" method="POST">
          <div class="form-group">
            <input type="text" id="title" class="form-control" name="title" value="<%= post.title %>" disabled="true">
          </div>
          <div class="form-group">
            <input type="text" id="author" class="form-control" name="author" value="<%= post.author %>" disabled="true">
          </div>
          <div class="form-group">
            <textarea id="post_data" class="form-control" name="post_data" cols="100" rows="10" disabled="true"><%= post.post_data %></textarea>
          </div>
          <button type="submit" id="button-delete" class="btn btn-primary">Delete</button>
        </form>


      </div>
    </div>
  </main>
<%- include ("./partials/footeractions") %>


<script type="text/javascript">
    $("#button-delete").click(function(event) {
      event.preventDefault();
      $.post("/delete/<%= post.id %>", (data, status) => {
        window.location.assign('/');
      });
    });
</script>